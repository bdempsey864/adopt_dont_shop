<h1>New Application</h1>
<%= form_with url: "/applications", method: :post, local: true do|f| %>

  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %><br><br>

  <%= f.label :street_address, "Street Address:" %>
  <%= f.text_field :street_address %><br><br>

  <%= f.label :city, "City:" %>
  <%= f.text_field :city %><br><br>

  <%= f.label :state, "State:" %>
  <%= f.text_field :state %><br><br>

  <%= f.label :zip_code, "Zip Code:"%>
  <%= f.text_field :zip_code, maxlength: 5 %><br><br>

  <%= f.submit 'Submit' %>

<% end %>